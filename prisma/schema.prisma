// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Student {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  classId   Int?
  class     Class?   @relation(fields: [classId], references: [id])
  groupId   Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([firstName, lastName])
  @@index([groupId])
  @@index([classId])
}

model Teacher {
  id          Int                 @id @default(autoincrement())
  firstName   String
  lastName    String
  assignments TeacherAssignment[]
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  @@index([firstName, lastName])
}

model Class {
  id          Int                 @id @default(autoincrement())
  name        String              @unique // e.g., "1AHITS", "2AFELC", "3BHME"
  description String?
  students    Student[]
  schedules   Schedule[]
  assignments TeacherAssignment[]
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  @@index([name])
}

model Schedule {
  id              Int           @id @default(autoincrement())
  name            String
  description     String?
  startDate       DateTime
  endDate         DateTime
  selectedWeekday Int
  scheduleData    Json
  classId         Int?
  class           Class?        @relation(fields: [classId], references: [id])
  scheduleTimes   ScheduleTime[]
  breakTimes      BreakTime[]
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([classId])
}

model GroupAssignment {
  id        Int      @id @default(autoincrement())
  groupId   Int
  class     String // e.g., "1AHITS", "2AFELC", "3BHME"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([class, groupId])
  @@index([class])
}

model TeacherAssignment {
  id                Int             @id @default(autoincrement())
  classId           Int
  class             Class           @relation(fields: [classId], references: [id])
  period            String // "AM" or "PM"
  groupId           Int
  teacherId         Int
  teacher           Teacher         @relation(fields: [teacherId], references: [id])
  subjectId         Int
  subject           Subject         @relation(fields: [subjectId], references: [id])
  learningContentId Int
  learningContent   LearningContent @relation(fields: [learningContentId], references: [id])
  roomId            Int
  room              Room            @relation(fields: [roomId], references: [id])
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  @@unique([classId, period, groupId])
  @@index([classId])
  @@index([teacherId])
  @@index([subjectId])
  @@index([learningContentId])
  @@index([roomId])
}

model Room {
  id          Int                 @id @default(autoincrement())
  name        String              @unique
  capacity    Int?
  description String?
  assignments TeacherAssignment[]
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  @@index([name])
}

model Subject {
  id                Int                 @id @default(autoincrement())
  name              String              @unique
  description       String?
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  TeacherAssignment TeacherAssignment[]

  @@index([name])
}

model LearningContent {
  id                Int                 @id @default(autoincrement())
  name              String              @unique
  description       String?
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  TeacherAssignment TeacherAssignment[]

  @@index([name])
}

model SchoolHoliday {
  id        Int      @id @default(autoincrement())
  name      String
  startDate DateTime
  endDate   DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ScheduleTime {
  id          Int        @id @default(autoincrement())
  startTime   String     // Format: "HH:mm"
  endTime     String     // Format: "HH:mm"
  hours       Float
  period      String     // "AM" or "PM"
  schedules   Schedule[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@unique([startTime, endTime, period])
}

model BreakTime {
  id          Int        @id @default(autoincrement())
  name        String     // e.g., "Morning Break", "Lunch Break", "Afternoon Break"
  startTime   String     // Format: "HH:mm"
  endTime     String     // Format: "HH:mm"
  period      String     // "AM" or "PM"
  schedules   Schedule[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@unique([startTime, endTime, period])
}

model SchedulePDF {
  id        String   @id @default(cuid())
  classId   String   @unique
  pdfData   Bytes
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
