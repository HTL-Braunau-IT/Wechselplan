generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  classId   Int?
  groupId   Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  username  String   @unique
  class     Class?   @relation(fields: [classId], references: [id])
  grades    Grade[]

  @@index([firstName, lastName])
  @@index([groupId])
  @@index([classId])
}

model Teacher {
  id          Int                 @id @default(autoincrement())
  firstName   String
  lastName    String
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  username    String              @unique
  email       String?             @unique
  assignments TeacherAssignment[]
  headClasses Class[]             @relation("ClassHead")
  leadClasses Class[]             @relation("ClassLead")
  grades      Grade[]

  @@index([firstName, lastName])
}

model Class {
  id          Int                     @id @default(autoincrement())
  name        String                  @unique
  description String?
  createdAt   DateTime                @default(now())
  updatedAt   DateTime                @updatedAt
  classHeadId Int?
  classLeadId Int?
  schedules   Schedule[]
  students    Student[]
  assignments TeacherAssignment[]
  grades      Grade[]
  transfers   NotenmanagementTransfer[]
  classHead   Teacher?                @relation("ClassHead", fields: [classHeadId], references: [id])
  classLead   Teacher?                @relation("ClassLead", fields: [classLeadId], references: [id])

  @@index([name])
}

model Schedule {
  id                Int            @id @default(autoincrement())
  name              String
  description       String?
  startDate         DateTime
  endDate           DateTime
  selectedWeekday   Int
  scheduleData      Json?          // Deprecated: will be removed after migration
  additionalInfo    String?
  semesterPlanning  String?        // "first", "second", or null for full year
  classId           Int?
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  class             Class?         @relation(fields: [classId], references: [id])
  breakTimes        BreakTime[]    @relation("BreakTimeToSchedule")
  scheduleTimes     ScheduleTime[] @relation("ScheduleToScheduleTime")
  turns             ScheduleTurn[]

  @@index([classId])
}

model ScheduleTurn {
  id                Int            @id @default(autoincrement())
  scheduleId        Int
  name              String         // e.g., "TURNUS 1"
  customLength      Int?           // Optional custom length for this turn
  order             Int             // Order of the turn within the schedule
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  schedule          Schedule       @relation(fields: [scheduleId], references: [id], onDelete: Cascade)
  weeks             ScheduleWeek[]
  holidays          ScheduleTurnHoliday[]

  @@unique([scheduleId, order])
  @@index([scheduleId])
}

model ScheduleWeek {
  id                Int            @id @default(autoincrement())
  turnId            Int
  date              String         // Date in format "dd.MM.yy"
  week              String         // Week number in format "KW##"
  isHoliday         Boolean        @default(false)
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  turn              ScheduleTurn   @relation(fields: [turnId], references: [id], onDelete: Cascade)

  @@index([turnId])
  @@index([date])
}

model ScheduleTurnHoliday {
  id                Int            @id @default(autoincrement())
  turnId            Int
  holidayId         Int
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  turn              ScheduleTurn   @relation(fields: [turnId], references: [id], onDelete: Cascade)
  holiday           SchoolHoliday  @relation(fields: [holidayId], references: [id], onDelete: Cascade)

  @@unique([turnId, holidayId])
  @@index([turnId])
  @@index([holidayId])
}

model GroupAssignment {
  id        Int      @id @default(autoincrement())
  groupId   Int
  class     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([class, groupId])
  @@index([class])
}

model TeacherAssignment {
  id                Int             @id @default(autoincrement())
  classId           Int
  period            String
  groupId           Int
  teacherId         Int
  subjectId         Int
  learningContentId Int
  roomId            Int
  selectedWeekday   Int             @default(1)
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  class             Class           @relation(fields: [classId], references: [id])
  learningContent   LearningContent @relation(fields: [learningContentId], references: [id])
  room              Room            @relation(fields: [roomId], references: [id])
  subject           Subject         @relation(fields: [subjectId], references: [id])
  teacher           Teacher         @relation(fields: [teacherId], references: [id])

  @@unique([classId, period, groupId])
  @@index([classId])
  @@index([teacherId])
  @@index([subjectId])
  @@index([learningContentId])
  @@index([roomId])
}

model Room {
  id          Int                 @id @default(autoincrement())
  name        String              @unique
  capacity    Int?
  description String?
  isCustom    Boolean             @default(false) // True if created by user, false if from seed/import
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  assignments TeacherAssignment[]

  @@index([name])
}

model Subject {
  id                Int                 @id @default(autoincrement())
  name              String              @unique
  description       String?
  isCustom          Boolean             @default(false) // True if created by user, false if from seed/import
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  TeacherAssignment TeacherAssignment[]

  @@index([name])
}

model LearningContent {
  id                Int                 @id @default(autoincrement())
  name              String              @unique
  description       String?
  isCustom          Boolean             @default(false) // True if created by user, false if from seed/import
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  TeacherAssignment TeacherAssignment[]

  @@index([name])
}

model SchoolHoliday {
  id        Int                   @id @default(autoincrement())
  name      String                @unique
  startDate DateTime
  endDate   DateTime
  createdAt DateTime              @default(now())
  updatedAt DateTime              @updatedAt
  scheduleTurns ScheduleTurnHoliday[]
}

model ScheduleTime {
  id        Int        @id @default(autoincrement())
  startTime String
  endTime   String
  hours     Float
  period    String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  schedules Schedule[] @relation("ScheduleToScheduleTime")

  @@unique([startTime, endTime, period])
}

model BreakTime {
  id        Int        @id @default(autoincrement())
  name      String
  startTime String
  endTime   String
  period    String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  schedules Schedule[] @relation("BreakTimeToSchedule")

  @@unique([startTime, endTime, period])
}

model SchedulePDF {
  id        String   @id @default(cuid())
  classId   String   @unique
  pdfData   Bytes
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TeacherRotation {
  id        Int      @id @default(autoincrement())
  classId   Int
  groupId   Int
  teacherId Int
  turnId    String
  period    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([classId, groupId, turnId, period])
}

model Role {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  description String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  userRoles   UserRole[]

  @@index([name])
}

model UserRole {
  id        Int      @id @default(autoincrement())
  userId    String
  roleId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      Role     @relation(fields: [roleId], references: [id])

  @@unique([userId, roleId])
  @@index([userId])
  @@index([roleId])
}

model SupportMessage {
  id         Int      @id @default(autoincrement())
  name       String
  message    String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  currentUri String?

  @@index([createdAt])
}

model Grade {
  id        Int      @id @default(autoincrement())
  studentId Int
  teacherId Int
  classId   Int
  semester  String   // 'first' or 'second'
  grade     Float?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  student   Student  @relation(fields: [studentId], references: [id])
  teacher   Teacher  @relation(fields: [teacherId], references: [id])
  class     Class    @relation(fields: [classId], references: [id])

  @@unique([studentId, teacherId, classId, semester])
  @@index([studentId])
  @@index([teacherId])
  @@index([classId])
  @@index([semester])
}

model NotenmanagementTransfer {
  id        Int      @id @default(autoincrement())
  classId   Int
  semester  String   // 'first' or 'second'
  lfId      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  class     Class    @relation(fields: [classId], references: [id])

  @@unique([classId, semester])
  @@index([classId])
  @@index([semester])
}