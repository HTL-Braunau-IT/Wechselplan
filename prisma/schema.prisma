// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Student {
    id        Int      @id @default(autoincrement())
    firstName String
    lastName  String
    class     String   // e.g., "1AHITS", "2AFELC", "3BHME"
    groupId   Int?     // The group this student belongs to
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    schedules Schedule[]

    @@index([class])
    @@index([groupId])
}

model Teacher {
    id        Int      @id @default(autoincrement())
    firstName String
    lastName  String
    schedules Schedule[]
    teacherAssignments TeacherAssignment[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@unique([firstName, lastName])
    @@index([firstName, lastName])
}

model Schedule {
    id        Int      @id @default(autoincrement())
    class     String   // e.g., "1AHITS", "2AFELC", "3BHME"
    weekDay   Int      // 1-5 for Monday-Friday
    period    Int      // Period number in the day
    subject   String
    teacherId Int      // Reference to the Teacher model
    teacher   Teacher  @relation(fields: [teacherId], references: [id])
    room      String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    students  Student[]

    @@index([class])
    @@index([teacherId])
    @@unique([class, weekDay, period])
}

model GroupAssignment {
    id        Int      @id @default(autoincrement())
    groupId   Int
    class     String   // e.g., "1AHITS", "2AFELC", "3BHME"
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([class])
    @@unique([class, groupId])
}

model TeacherAssignment {
    id              Int      @id @default(autoincrement())
    class           String   // e.g., "1AHITS", "2AFELC", "3BHME"
    period          String   // "AM" or "PM"
    groupId         Int
    teacherId       Int
    teacher         Teacher  @relation(fields: [teacherId], references: [id])
    subject         String
    learningContent String
    room            String
    createdAt       DateTime @default(now())
    updatedAt       DateTime @updatedAt

    @@index([class])
    @@index([teacherId])
    @@unique([class, period, groupId])
}

